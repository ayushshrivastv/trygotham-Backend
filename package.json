{
  "name": "zk-census",
  "version": "1.0.0",
  "description": "Privacy-preserving census infrastructure for decentralized communities",
  "private": true,
  "workspaces": [
    "packages/*",
    "programs/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean",
    "dev:api": "pnpm --filter @zk-census/api dev",
    "dev:circuits": "pnpm --filter @zk-census/circuits dev",
    "anchor:build": "cd programs/census-program && anchor build",
    "anchor:test": "cd programs/census-program && anchor test",
    "anchor:deploy": "cd programs/census-program && anchor deploy"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
